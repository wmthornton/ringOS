{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build kernel",
            "command": "/usr/bin/make",
            "args": [
                "kernel",
                "buildimg"
            ],
            "options": {
                "cwd": "${workspaceFolder}/kernel"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "process",
            "label": "Launch Qemu",
            "command": "explorer.exe",
            "args": [
                "debug.bat"
            ],
            "options": {
                "cwd": "${workspaceFolder}/kernel"
            },
            "dependsOn": "Build kernel"
        }
    ],
    "version": "2.0.0"
}